{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Effect": "Allow",
            "Action": [
                "logs:CreateLogGroup",
                "logs:CreateLogStream",
                "logs:PutLogEvents",
                "logs:DescribeLogGroups",
                "logs:DescribeLogStreams"
            ],
            "Resource": "*"
        },
        {
            "Effect": "Allow",
            "Action": [
                "fis:StartExperiment",
                "fis:GetExperimentSummary",
                "fis:GetExperimentResults",
                "fis:StopExperiment"
            ],
            "Resource": "*"
        }
    ]
}